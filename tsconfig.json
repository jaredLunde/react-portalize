{
  "include": ["server/src", "src"],
  "exclude": ["**/src/**/*.test.tsx"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "react-portalize": ["./src"],
      "react-portalize/server": ["./server"]
    }
  }
}
