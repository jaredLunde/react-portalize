{
  "include": ["src", "server/src"],
  "exclude": ["src/**/*.test.tsx", "server/src/**/*.test.tsx"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "react-portalize": ["./src"],
      "react-portalize/server": ["./server"]
    }
  }
}
